@{
    ViewData["Title"] = "Departments";
}

@section Scripts{
    <script src="~/js/department/departments.controller.js" asp-append-version="true"></script>
}

<div ng-app="app" ng-controller="DepartmentsController as vm" ng-cloak>
    <h1>Departments</h1>
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Minimum Staff</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="department in vm.departments">
                    <td>{{department.id}}</td>
                    <td>{{department.name}}</td>
                    <td>{{department.minimumRequired}}</td>
                    <td>
                        <a class="pull-right col-md-1" href="#" ng-click="vm.remove($index)"><i class="fa fa-times"></i></a>
                        <a class="pull-right col-md-1" href="/Manage/Department/{{department.id}}"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-right">
            <a class="btn btn-info" href="/Manage/NewDepartment">Create</a>
        </div>
    </div>
</div>