
@{
    ViewData["Title"] = "Clock In/Out";
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/moment/moment.js"></script>
<script>
    $(document).ready(function () {
        window.setInterval(function () {
            var date = moment();
            var time = document.getElementById('time');
            time.innerHTML = date.format('ddd DD MMM, HH.mm.ss');
        }, 1000);
    });
</script>

<!DOCTYPE html>
<html>

<head>
    <title>HR Pharm - Staff Portal</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <div class="account">
        <div class="container">
            <div class="middle-box text-center loginscreen animated fadeInDown">

                <div class="row">
                    <div class="col-md-12">
                        <a asp-action="Index"><img class="img-responsive" src="~/images/Logo.png" /></a>

                        <h2>Clock In/Out</h2>
                        <h3 id="time"></h3>
                        <div class="space40"></div>
                        <form method="POST">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><img src="~/images/barcode_ico.png" /></span>

                                    <input id="barcode" name="barcode" type="text" class="form-control" placeholder="Your Barcode" />
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-info" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>