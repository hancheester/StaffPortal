@{
    ViewData["Title"] = "My Trainings";
}

@section scripts {
    <script src="~/js/Manage/training-app.js"></script>
    <script src="~/js/Manage/controllers/trainingCtrl.js" asp-append-version="true"></script>
}

<div ng-app="training-app" ng-controller="trainingCtrl">
    <div class="row">

        <div class="panel-rel col-sm-4">
            <img class="media-object" src="~/images/my_trainings/ongoing.png" alt="...">
            <div class="panel-body pad-top60">
                <h4 class="panel-title">Training Modules</h4>
                <p>
